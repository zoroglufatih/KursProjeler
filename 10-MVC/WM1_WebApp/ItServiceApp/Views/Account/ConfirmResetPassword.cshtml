@model ResetPasswordViewModel

@{
    ViewBag.Title = "Şifremi Unuttum";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->

<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">
            
            <div class="text-info">@TempData["Message"]</div>
            <div class="text-info">@ViewBag.Message</div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <form asp-controller="Account" asp-action="ConfirmResetPassword" method="post">
            <input type="hidden" value="@ViewBag.UserId" id="UserId" name="UserId"/>
            <input type="hidden" value="@ViewBag.Code" id="Code" name="Code"/>
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Şifre Güncelleme</h3>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword"></label>
                                <input asp-for="ConfirmNewPassword">
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="payment-box mt-30">
                                <input type="submit" class="main-btn" value="Şifre Güncelle"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->

@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding:0 15px
        }
    </style>
}