@model PasswordChangeViewModel

@{
    ViewBag.Title = "Şifre Değiştir";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->

<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <form asp-controller="Account" asp-action="UpdatePassword" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Şifre değiştirme</h3>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="OldPassword"></label>
                                    <input asp-for="OldPassword">
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="payment-box mt-30">
                                    <input type="submit" class="main-btn" value="Şifre Güncelle" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->

@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding:0 15px
        }
    </style>
}